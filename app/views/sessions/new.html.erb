<h1>Log in</h1>

<%= form_tag sessions_path, method: :post, id: 'new_session' do %>
  <% if flash[:error] %>
    <div class="alert alert-danger">
      <strong>Error:</strong>
      <p><%= flash[:error] %></p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: 'form-control' %>
  </div>

  <%= submit_tag 'Log in', class: 'btn btn-primary btn-lg' %>
<% end %>

<hr />
<p>No account? <%= link_to 'Register', new_user_path %></p>
