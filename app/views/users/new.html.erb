<h1>Register</h1>

<%= form_for @user, path: sessions_path, method: :post do |f| %>
  <% if @user.errors.any? %>
    <%= render 'shared/errors', errors: @user.errors %>
  <% end %>

  <%= render 'fields', f: f %>
  <%= f.submit 'Register', class: 'btn btn-primary btn-lg' %>
<% end %>

<hr />
<p>Already have an account? <%= link_to 'Log in', :login %></p>
